{
	"compileOnSave": false,
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"jsx": "preserve",
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmit": true,
		"noImplicitAny": false,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": false,
		"strict": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"target": "es2017",
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./src/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types"
		],
	},
	"exclude": [
		"node_modules",
		"dist",
		"build",
        "src/.next",
        ".next",
	]
}